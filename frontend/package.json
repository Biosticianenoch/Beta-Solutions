{
  /**
   * Package Configuration
   * This file defines the project's dependencies, scripts, and metadata.
   */

  // Project metadata
  "name": "dataquest-solutions-frontend",
  "private": true,
  "version": "0.1.0",
  "type": "module",

  // NPM scripts for development and build
  "scripts": {
    // Start development server
    "dev": "vite",
    // Build for production
    "build": "tsc && vite build",
    // Run ESLint
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    // Preview production build
    "preview": "vite preview"
  },

  // Production dependencies
  "dependencies": {
    // UI Components
    "@radix-ui/react-dialog": "^1.0.5",      // Accessible dialog component
    "@radix-ui/react-dropdown-menu": "^2.0.6", // Accessible dropdown menu
    "@radix-ui/react-slot": "^1.0.2",        // Slot component for composition
    "@radix-ui/react-tooltip": "^1.0.7",
    "@tanstack/react-query": "^5.28.4",      // Data fetching and state management
    "clsx": "^2.1.0",                        // Utility for constructing className strings
    "lucide-react": "^0.344.0",              // Icon library
    "react": "^18.2.0",                      // React core library
    "react-dom": "^18.2.0",                  // React DOM rendering
    "react-router-dom": "^6.22.2",           // Routing library
    "tailwind-merge": "^2.2.1",              // Utility for merging Tailwind classes
    "tailwindcss-animate": "^1.0.7"          // Animation utilities for Tailwind
  },

  // Development dependencies
  "devDependencies": {
    // TypeScript type definitions
    "@types/node": "^20.11.24",              // Node.js type definitions
    "@types/react": "^18.2.56",              // React type definitions
    "@types/react-dom": "^18.2.19",          // React DOM type definitions

    // TypeScript and ESLint
    "@typescript-eslint/eslint-plugin": "^8.30.1", // TypeScript ESLint plugin
    "@typescript-eslint/parser": "^8.30.1",        // TypeScript ESLint parser
    "eslint": "^8.56.0",                           // JavaScript linter
    "eslint-plugin-react-hooks": "^4.6.0",         // React Hooks ESLint rules
    "eslint-plugin-react-refresh": "^0.4.5",       // React Fast Refresh ESLint rules

    // Build tools
    "@vitejs/plugin-react": "^4.2.1",        // Vite React plugin
    "autoprefixer": "^10.4.18",              // PostCSS plugin for vendor prefixes
    "postcss": "^8.4.35",                    // CSS transformation tool
    "tailwindcss": "^3.4.1",                 // Utility-first CSS framework
    "typescript": "^5.2.2",                  // TypeScript compiler
    "vite": "^5.1.4"                         // Build tool and dev server
  }
}
